<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OtelPrilNew.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OtelPrilNew"
    Shell.FlyoutBehavior="Flyout"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:pages="clr-namespace:OtelPrilNew.Pages"
    Shell.TabBarBackgroundColor="{StaticResource Mid}"
    Title="OtelPrilNew">

    <TabBar>

        <ShellContent Title="главная"
                  Icon="bxs_search_alt_2"
                  ContentTemplate="{DataTemplate pages:HomePage}" 
                  Route="HomePage"/>


        <ShellContent Title="ваш отель"
                  Icon="bxs_heart"
                  ContentTemplate="{DataTemplate pages:FavoritesPage}"
                  Route=":FavoritesPage"/>

        <ShellContent Title="Профиль"
                  Icon="bxs_user_circle"
                  ContentTemplate="{DataTemplate pages:ProfilePage}"
                  Route="ProfilePage"/>



    </TabBar>

</Shell>
